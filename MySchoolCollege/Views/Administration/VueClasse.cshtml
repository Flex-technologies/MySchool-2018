@model MySchoolLibrary2018.Models.ModelViews.ClasseViewModel
    @{
        ViewBag.Title = "Détails classe: " + Model.Nom;
    }

    <!-- MAIN CONTENT -->
<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-list-alt fa-fw "></i>
                @Model.Nom
                <span>
                    >
                    @Model.AnneeScolaire.AnneeAcademique
                </span>
            </h1>
        </div>
        <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8">
            <ul id="sparks" class="">
                <li class="sparks-info">
                    <h5> Inscrits <span class="txt-color-blue"><i class="fa fa-user" data-rel="bootstrap-tooltip" title="Increased"></i>&nbsp;@Model.Inscriptions.Count</span></h5>

                </li>
                <li class="sparks-info">
                    <h5> Cours <span class="txt-color-purple"><i class="fa fa-calendar" data-rel="bootstrap-tooltip" title="Increased"></i>&nbsp;@Model.Cours.Count</span></h5>

                </li>
                <li class="sparks-info">
                    <h5> Matières <span class="txt-color-greenDark"><i class="fa fa-suitcase"></i>&nbsp;@Model.ServiceMatieres.Count</span></h5>

                </li>
                <li class="sparks-info">
                    <h5> UE <span class="txt-color-greenDark"><i class="fa fa-tasks"></i>&nbsp;@Model.UniteEnseignements.Count</span></h5>

                </li>
                <li class="sparks-info">
                    <h5> Contrôles <span class="txt-color-greenDark"><i class="fa fa-sort-numeric-asc"></i>&nbsp;@Model.Controles.Count</span></h5>

                </li>
            </ul>
        </div>
    </div>


    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0">
                    <!-- widget options:
                        usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                        data-widget-colorbutton="false"
                        data-widget-editbutton="false"
                        data-widget-togglebutton="false"
                        data-widget-deletebutton="false"
                        data-widget-fullscreenbutton="false"
                        data-widget-custombutton="false"
                        data-widget-collapsed="true"
                        data-widget-sortable="false"

                    -->
                    <header>
                        <h2><strong>Liste des</strong> <i>Inscrits</i></h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                            <input class="form-control" type="text">
                            <span class="note"><i class="fa fa-check text-success"></i> Change title to update and save instantly!</span>

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <table id="dt_basic" class="table table-striped table-bordered table-hover datatable no-footer" role="grid" aria-describedby="dt_basic_info" style="width: 100%;">
                                <thead>
                                    <tr>
                                        <th>Civillité</th>
                                        <th>Prénom</th>
                                        <th>Nom</th>
                                        <th>Nationalité</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model.Inscriptions)
                                    {
                                        <tr>
                                            <td>@item.Etudiant.Civillite</td>
                                            <td>@item.Etudiant.Prenom</td>
                                            <td>@item.Etudiant.Nom</td>
                                            <td>@item.Etudiant.Nationalite</td>
                                            <td></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                           
                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->


            </article>
            <!-- WIDGET END -->
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1">
                    <!-- widget options:
                        usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                        data-widget-colorbutton="false"
                        data-widget-editbutton="false"
                        data-widget-togglebutton="false"
                        data-widget-deletebutton="false"
                        data-widget-fullscreenbutton="false"
                        data-widget-custombutton="false"
                        data-widget-collapsed="true"
                        data-widget-sortable="false"

                    -->
                    <header>
                        <h2><strong>Planning des</strong> <i>Cours</i></h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                            <input class="form-control" type="text">
                            <span class="note"><i class="fa fa-check text-success"></i> Change title to update and save instantly!</span>

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                          <table class="table table-bordered table-striped table-hover datatable no-footer" role="grid" aria-describedby="dt_basic_info" style="width: 100%;">
                              <thead>
                                  <tr>
                                      <th>Matière</th>
                                      <th>Professeur</th>
                                      <th>Date</th>
                                      <th>Début</th>
                                      <th>Fin</th>
                                      <th>Batiment/Salle</th>
                                  </tr>
                              </thead>
                              <tbody>
                                  @foreach(var cours in Model.Cours)
                                  {
                                      <tr>
                                          <td>@cours.Matiere.Matiere</td>
                                          <td>@cours.Professeur.Prenom @cours.Professeur.Nom</td>
                                          <td>@cours.DateCours</td>
                                          <td>@cours.HeureDebut</td>
                                          <td>@cours.HeureFin</td>
                                          <td>@cours.Salle.Batiment.Id/@cours.Salle.Id</td>
                                      </tr>
                                  }
                              </tbody>
                          </table>
                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->


            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-2">
                    <!-- widget options:
                        usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                        data-widget-colorbutton="false"
                        data-widget-editbutton="false"
                        data-widget-togglebutton="false"
                        data-widget-deletebutton="false"
                        data-widget-fullscreenbutton="false"
                        data-widget-custombutton="false"
                        data-widget-collapsed="true"
                        data-widget-sortable="false"

                    -->
                    <header>
                        <h2><strong>Unités</strong> <i>d'enseignement</i></h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                            <input class="form-control" type="text">
                            <span class="note"><i class="fa fa-check text-success"></i> Change title to update and save instantly!</span>

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <table class="table table-bordered table-striped table-hover datatable no-footer" role="grid" aria-describedby="dt_basic_info" style="width: 100%;">
                                <thead>
                                    <tr>
                                        <th>Description</th>
                                        <th>Crédit</th>
                                        <th>Année académique</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var eu in Model.UniteEnseignements)
                                    {
                                        <tr>
                                            <td>@eu.Description</td>
                                            <td>@eu.Credit</td>
                                            <td>@eu.AnneeScolaire.AnneeAcademique</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                           
                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->


            </article>
            <!-- WIDGET END -->
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-3">
                    <!-- widget options:
                        usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                        data-widget-colorbutton="false"
                        data-widget-editbutton="false"
                        data-widget-togglebutton="false"
                        data-widget-deletebutton="false"
                        data-widget-fullscreenbutton="false"
                        data-widget-custombutton="false"
                        data-widget-collapsed="true"
                        data-widget-sortable="false"

                    -->
                    <header>
                        <h2><strong>Liste des</strong> <i>Matières</i></h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                            <input class="form-control" type="text">
                            <span class="note"><i class="fa fa-check text-success"></i> Change title to update and save instantly!</span>

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <table class="table table-bordered table-striped table-hover datatable no-footer" role="grid" aria-describedby="dt_basic_info" style="width: 100%;">
                                <thead>
                                    <tr>
                                        <th>Code</th>
                                        <th>Description</th>
                                        <th>Coef</th>
                                        <th>Volume H</th>
                                        <th>Crédit</th>
                                        <th>Ue</th>
                                        <th>Prof</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var m in Model.ServiceMatieres)
                                    {
                                        <tr>
                                            <td>@m.Matiere.CodeMatiere</td>
                                            <td>@m.Matiere.Description</td>
                                            <td>@m.Coeficient</td>
                                            <td>@m.VolumeHoraire</td>
                                            <td>@m.Credit</td>
                                            <td>@m.UniteEnseignement.Description</td>
                                            <td>@m.Professeur.Prenom @m.Professeur.Nom</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->


            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->

    </section>
    <!-- end widget grid -->
    <section>
        <a href="~/Administration/Classes" class="btn btn-default"> <strong>Retour</strong> <i>à la liste</i> </a>
    </section>

</div>
    <!-- END MAIN CONTENT -->
