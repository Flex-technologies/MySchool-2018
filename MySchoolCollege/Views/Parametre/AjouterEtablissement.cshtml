@model MySchoolLibrary2018.Models.ModelViews.EtablissementViewModel

@{
    ViewBag.Title = "Ajouter un établissement";
}

<h2>Ajouter un établissement</h2>


<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-list-alt fa-bank"></i>
                Etablissements
            </h1>
        </div>
    </div>
    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- row -->
        <div class="row">

            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0">
                    <!-- widget options:
                        usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                        data-widget-colorbutton="false"
                        data-widget-editbutton="false"
                        data-widget-togglebutton="false"
                        data-widget-deletebutton="false"
                        data-widget-fullscreenbutton="false"
                        data-widget-custombutton="false"
                        data-widget-collapsed="true"
                        data-widget-sortable="false"

                    -->
                    <header>
                        <h2><strong>Ajouter une </strong> <i>Année scolaire</i></h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                            <input class="form-control" type="text">
                            <span class="note"><i class="fa fa-check text-success"></i> Change title to update and save instantly!</span>

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">

                            @using (Html.BeginForm("AjouterEtablissement", "Parametre", FormMethod.Post, new { @class = "smart-form" }))
                            {
                                @Html.AntiForgeryToken()
                                <header>Ajouter une année scolaire</header>

                                @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
                                <div>
                                    @Html.ValidationSummary("", new { @class = "text-danger padding" })
                                </div>

                                <div class="alert-danger">
                                    @ViewBag.MessageError
                                </div>
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-6">

                                            <label class="input">
                                                @Html.EditorFor(model => model.Nom, new { htmlAttributes = new { placeholder = "Nom de l'établissement" } })
                                                @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger" })
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-6">

                                            <label class="select">

                                                @Html.DropDownListFor(model => model.TypeEtablissementId, Model.Types, "Sélectionner un type", new { htmlAttributes = new { placeholder = "Sélectionner un type" } })
                                                <i></i>
                                                @Html.ValidationMessageFor(model => model.TypeEtablissementId, "", new { @class = "text-danger" })
                                            </label>
                                        </section>
                                        <section class="col col-6">

                                            <label class="input">
                                                @Html.EditorFor(model => model.Fax, new { htmlAttributes = new { placeholder = "Fax" } })
                                                @Html.ValidationMessageFor(model => model.Fax, "", new { @class = "text-danger" })
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-6">

                                            <label class="input">
                                                @Html.EditorFor(model => model.TelephoneScolarite, new { htmlAttributes = new { placeholder = "Téléphone scolarité" } })
                                                @Html.ValidationMessageFor(model => model.TelephoneScolarite, "", new { @class = "text-danger" })
                                            </label>
                                        </section>
                                        <section class="col col-6">

                                            <label class="input">
                                                @Html.EditorFor(model => model.TelephoneSecretariat, new { htmlAttributes = new { placeholder = "Téléphone sécrétariat" } })
                                                @Html.ValidationMessageFor(model => model.TelephoneSecretariat, "", new { @class = "text-danger" })
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">

                                        <section class="col col-6">
                                            <label class="input">
                                                <i class="icon-append fa fa-envelope-o"></i>
                                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { placeholder = "Email" } })
                                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                            </label>
                                        </section>
                                        <section class="col col-6">
                                            <label class="input">
                                                @Html.EditorFor(model => model.SiteWeb, new { htmlAttributes = new { placeholder = "Site Web" } })
                                                @Html.ValidationMessageFor(model => model.SiteWeb, "", new { @class = "text-danger" })
                                            </label>
                                        </section>


                                    </div>

                                    <section>

                                        <label class="input">
                                            <i class="icon-append fa fa-map-marker"></i>
                                            @Html.EditorFor(model => model.Adresse, new { htmlAttributes = new { placeholder = "Adresse" } })
                                            @Html.ValidationMessageFor(model => model.Adresse, "", new { @class = "text-danger" })
                                        </label>
                                    </section>

                                    <div class="row">
                                        <section class="col col-6">

                                            <label class="input">

                                                @Html.EditorFor(model => model.Ville, new { htmlAttributes = new { placeholder = "Ville" } })
                                                @Html.ValidationMessageFor(model => model.Ville, "", new { @class = "text-danger" })
                                            </label>
                                        </section>
                                        <section class="col col-6">

                                            <label class="input">

                                                @Html.EditorFor(model => model.Pays, new { htmlAttributes = new { placeholder = "Pays" } })
                                                @Html.ValidationMessageFor(model => model.Pays, "", new { @class = "text-danger" })
                                            </label>
                                        </section>
                                    </div>

                                </fieldset>
                                <footer>

                                    <button class="btn btn-primary" type="submit">
                                        Ajouter
                                    </button>
                                    <button class="btn btn-default" formaction="Etablissements">
                                        Annuler
                                    </button>

                                </footer>

                            }

                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->


            </article>
            <!-- WIDGET END -->
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-2" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false">
                    <!-- widget options:
                        usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                        data-widget-colorbutton="false"
                        data-widget-editbutton="false"
                        data-widget-togglebutton="false"
                        data-widget-deletebutton="false"
                        data-widget-fullscreenbutton="false"
                        data-widget-custombutton="false"
                        data-widget-collapsed="true"
                        data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-question"></i> </span>
                        <h2 class="font-md"><strong>Guide</strong> <i>d'utilisation</i></h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body smart-form no-padding">
                            <header>Cette formulaire vous permez d'ajouter un établissement</header>

                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->



            </article>
            <!-- WIDGET END -->


        </div>

        <!-- end row -->


    </section>
    <!-- end widget grid -->

</div>

@section pagespecific {
    <script type="text/javascript">

        // DO NOT REMOVE : GLOBAL FUNCTIONS!

        $(document).ready(function () {

            $.datepicker.setDefaults($.datepicker.regional["fr"]);
            $('.datepicker').datepicker({
                dateFormat: 'dd/mm/yy'

            });



        })
    </script>


}




